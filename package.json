{
  "name": "@the-donatry/donation-management",
  "version": "0.1.0",
  "description": "Donation Management service for Benevolent project",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist && rimraf tsconfig.dev.tsbuildinfo",
    "dev": "tsc-watch -p tsconfig.dev.json --noClear --onSuccess \"node dist/index.js --enable-source-maps --inspect\" | pino-pretty",
    "start": "node dist/index.js --enable-source-maps",
    "start:debug": "node dist/index.js --inspect --enable-source-maps",
    "test": "vitest run --coverage",
    "test:dev": "vitest watch",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make --esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mtl-benevolent/donation-management.git"
  },
  "author": "Gabriel Lemire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mtl-benevolent/donation-management/issues"
  },
  "homepage": "https://github.com/mtl-benevolent/donation-management#readme",
  "devDependencies": {
    "@tsconfig/node18": "2.0.0",
    "@types/koa": "2.13.6",
    "@types/koa__router": "12.0.0",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa-pino-logger": "3.0.1",
    "@types/lodash": "4.14.194",
    "@types/node": "18.16.3",
    "c8": "7.13.0",
    "pino-pretty": "10.0.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "tsc-watch": "6.0.4",
    "type-fest": "3.9.0",
    "typescript": "5.0.4",
    "vitest": "0.30.1"
  },
  "dependencies": {
    "@koa/router": "12.0.0",
    "joi": "17.9.2",
    "knex": "2.4.2",
    "koa": "2.14.2",
    "koa-bodyparser": "4.4.0",
    "koa-pino-logger": "4.0.0",
    "lodash": "4.17.21",
    "node-graceful-shutdown": "1.1.5",
    "pg": "8.10.0",
    "pino": "8.11.0"
  }
}
