{
  "name": "@the-donatry/donation-management",
  "version": "0.1.0",
  "description": "Donation Management service for Benevolent project",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:docker": "docker-compose build",
    "clean": "rimraf dist && rimraf tsconfig.dev.tsbuildinfo",
    "dev": "tsc-watch -p tsconfig.dev.json --noClear --onSuccess \"node dist/index.js --enable-source-maps --inspect\" | pino-pretty",
    "start": "node dist/index.js --enable-source-maps",
    "start:debug": "node dist/index.js --inspect",
    "start:docker": "docker-compose up -d",
    "stop:docker": "docker-compose down",
    "test": "vitest run --coverage",
    "test:dev": "vitest watch",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make --esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mtl-benevolent/donation-management.git"
  },
  "author": "Gabriel Lemire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mtl-benevolent/donation-management/issues"
  },
  "homepage": "https://github.com/mtl-benevolent/donation-management#readme",
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/joi": "17.2.3",
    "@types/koa": "2.13.4",
    "@types/koa__router": "8.0.11",
    "@types/koa-bodyparser": "4.3.7",
    "@types/koa-pino-logger": "3.0.1",
    "@types/node": "16.11.7",
    "c8": "7.11.0",
    "pino-pretty": "7.6.1",
    "prettier": "2.6.0",
    "rimraf": "3.0.2",
    "tsc-watch": "4.6.2",
    "type-fest": "2.18.0",
    "typescript": "4.6.2",
    "vitest": "0.7.6"
  },
  "dependencies": {
    "@koa/router": "10.1.1",
    "joi": "17.6.0",
    "knex": "2.0.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-pino-logger": "4.0.0",
    "node-graceful-shutdown": "1.1.2",
    "pg": "8.7.3",
    "pino": "7.11.0"
  }
}
